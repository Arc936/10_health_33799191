<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/header.ejs') %>
    <style>
        /* Basic styling for the table (optional) */
        table { width: 80%; border-collapse: collapse; margin-top: 20px; }
        th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
        th { background-color: #f2f2f2; }
        .center { text-align: center; }
    </style>
</head>
<body>
    <div class="container">
        <h1><%= title %></h1>
        <p><a href="/">‚Üê Back to Dashboard</a></p>

        <% if (workouts.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>User</th>
                        <th>Activity</th>
                        <th>Duration (mins)</th>
                        <th>Calories Burned</th>
                    </tr>
                </thead>
                <tbody>
                    <% workouts.forEach(function(workout) { %>
                        <tr>
                            <td><%= workout.workout_date ? workout.workout_date.toISOString().split('T')[0] : 'N/A' %></td>
                            <td><%= workout.username %></td>
                            <td><strong><%= workout.activity_name %></strong></td>
                            <td class="center"><%= workout.duration_minutes %></td>
                            <td class="center"><%= workout.calories_burned %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p>No workouts have been logged yet.</p>
            <p><a href="/log-workout">Log your first workout!</a></p>
        <% } %>
    </div>
</body>
</html>